{
    "name": "Node Boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for any nodejs applications",
    "main": "index.js",
    "private": true,
    "engines": {
        "node": ">=8.3.2"
    },
    "scripts": {
        "postinstall": "husky install",
        "lint:fix": "eslint . --fix",
        "start": "node --inspect src/index.js",
        "start:uat": "node --inspect src/index.js",
        "start:dev": "env-cmd -f .env.dev node --inspect src/index.js",
        "start:local": "env-cmd -f .env nodemon --inspect src/index.js",
        "test": "env-cmd -f .env.test mocha test/ --timeout 30000000 --recursive --exit",
        "prepare": "husky install",
        "test:coverage": "./node_modules/.bin/nyc --reporter=lcov --reporter=html npm run test"
    },
    "keywords": [],
    "author": "Shanmukhasai",
    "license": "ISC",
    "dependencies": {
        "@hapi/boom": "9.1.2",
        "@hapi/joi-date": "2.0.1",
        "axios": "0.21.0",
        "bluebird": "3.5.1",
        "body-parser": "1.19.0",
        "config": "3.3.6",
        "cors": "2.8.5",
        "env-cmd": "10.1.0",
        "express": "4.17.1",
        "helmet": "4.6.0",
        "http-status-codes": "2.1.4",
        "joi": "17.4.0",
        "joi-objectid": "3.0.1",
        "lodash": "4.17.20",
        "morgan": "1.10.0",
        "mysql2": "2.3.3",
        "redis": "3.1.2",
        "redis-mock": "0.56.3",
        "request-context": "^2.0.0",
        "sequelize": "6.12.0-beta.3",
        "short-uuid": "4.2.2",
        "swagger-autogen": "2.18.3",
        "swagger-ui-express": "4.3.0",
        "uuid": "8.3.2",
        "winston": "3.3.3",
        "xss-clean": "0.1.1"
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix"
        ]
    },
    "devDependencies": {
        "chai": "4.2.0",
        "cheerio": "1.0.0-rc.5",
        "eslint": "6.8.0",
        "eslint-config-airbnb": "18.2.1",
        "eslint-config-airbnb-base": "14.2.1",
        "eslint-config-prettier": "7.1.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-prettier": "3.3.0",
        "husky": "7.0.0",
        "lint-staged": "10.4.0",
        "mocha": "7.0.1",
        "mocha-junit-reporter": "2.0.0",
        "nock": "13.0.6",
        "nodemon": "2.0.2",
        "nyc": "15.0.0",
        "prettier": "2.2.1",
        "supertest": "4.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}